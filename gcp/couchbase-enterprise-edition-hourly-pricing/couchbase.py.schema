imports:
  - path: deployment.py
  - path: cluster.py
  - path: group.py
  - path: naming.py

required:
  - serverNodeCount
  - serverNodeType
  - serverDiskSize
  - serverVersion
  - syncGatewayNodeCount
  - syncGatewayNodeType
  - syncGatewayDiskSize
  - syncGatewayVersion

properties:
  us-central1:
    type: boolean
    default: true
  us-west1:
    type: boolean
    default: false
  us-east1:
    type: boolean
    default: false
  us-east4:
    type: boolean
    default: false
  europe-west1:
    type: boolean
    default: false
  europe-west2:
    type: boolean
    default: false
  europe-west3:
    type: boolean
    default: false
  asia-southeast1:
    type: boolean
    default: false
  asia-east1:
    type: boolean
    default: false
  asia-northeast1:
    type: boolean
    default: false
  australia-southeast1:
    type: boolean
    default: false
  us-west4:
    type: boolean
    default: false
  us-west2:
    type: boolean
    default: false  
  us-west3:
    type: boolean
    default: false
  northamerica-northeast1:
    type: boolean
    default: false
  europe-central2:
    type: boolean
    default: false
  europe-north1:
    type: boolean
    default: false
  europe-west6:
    type: boolean
    default: false
  asia-southeast2:
    type: boolean
    default: false
  asia-northeast3:
    type: boolean
    default: false
  asia-northeast2:
    type: boolean
    default: false
  asia-east2:
    type: boolean
    default: false
  southamerica-east1:
    type: boolean
    default: false
  asia-south1:
    type: boolean
    default: false
    
  defaultZone:
    type: string
    default: us-central1-f
    x-googleProperty:
      type: GCE_ZONE

  serverNodeCount:
    type: integer
    default: 3
    minimum: 1
    maximum: 100
  serverNodeType:
    type: string
    default: n1-standard-4
    x-googleProperty:
      type: GCE_MACHINE_TYPE
      zoneProperty: defaultZone
  serverDiskSize:
    type: integer
    minimum: 20
    default: 20
  serverVersion:
    type: string
    default: 7.0.0
    enum:
      - 7.0.0
      - 6.6.2
      - 6.6.1
      - 6.6.0
      - 6.5.2
      - 6.5.1
      - 6.5.0
      - 6.0.4
      - 6.0.3
      - 6.0.2
      - 6.0.1
      - 6.0.0

  syncGatewayNodeCount:
    type: integer
    default: 0
    minimum: 0
    maximum: 100
  syncGatewayNodeType:
    type: string
    default: n1-standard-4
    x-googleProperty:
      type: GCE_MACHINE_TYPE
      zoneProperty: defaultZone
  syncGatewayDiskSize:
    type: integer
    minimum: 20
    default: 20
  syncGatewayVersion:
    type: string
    default: 2.8.2
    enum:
      - 2.8.2
      - 2.8.0
      - 2.7.3
      - 2.7.2
      - 2.7.1
      - 2.7.0
      - 2.6.0
      - 2.5.0
      - 2.1.3
      - 2.1.2
      - 2.1.1
      - 2.1.0
      - 2.0.0
      - 2.0.2
      - 2.0.3
      - 1.5.1
      - 1.5.2

outputs:
  couchbaseUsername:
    type: string
  couchbasePassword:
    type: string
